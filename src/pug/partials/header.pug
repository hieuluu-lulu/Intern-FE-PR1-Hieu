
header.header 
    .container 
        .row 
            nav.header__nav
                a.header__nav-brand(href="#home")
                    img(src="./assets/images/logo.png" alt= "logo")
                input(type="checkbox" id="menu" hidden )
                ul.header__nav-list
                    each item in listMenu 
                        if ( item.name === "Sản phẩm")
                            li.list__item.list__item--hasChild
                                a.list__item-link(href= `${item.href}.html`)= item.name 
                                i.fas.fa-chevron-down
                                .mega-menu
                                    .mega-menu__col 
                                        h1.mega-menu__col-heading Dưỡng da
                                        each value in skin 
                                            ul.mega-menu__col-wrap
                                                li.wrap__item
                                                    a(href="#")= value
                                    .mega-menu__col
                                        h1.mega-menu__col-heading Nước hoa
                                        each dress in dresses
                                            ul.mega-menu__col-wrap
                                                li.wrap__item
                                                    a(href="#")= dress
                                    .mega-menu__col
                                        h1.mega-menu__col-heading Trang sức
                                        each dress in dresses
                                            ul.mega-menu__col-wrap
                                                li.wrap__item
                                                    a(href="#")= dress
                        else if(item.name === "Trang chủ") 
                            li.list__item
                                a.list__item-link(href= `/`)= item.name 
                        else
                            li.list__item
                                a.list__item-link(href= `/${item.href}.html`)= item.name 
                                    
                .header__nav-right
                    .right__cart 
                        a(href="./product-cart.html")
                            i.fas.fa-shopping-cart
                        span 
                        .right__cart-wrap 
                            .wrap__items 
                                .wrap__items-image 
                                    img(src="./assets/images/cart-avatar.jpg", alt="cart-img")
