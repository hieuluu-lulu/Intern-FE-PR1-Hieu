extend ../layouts/layout.pug
include ../base/mixin.pug
block header
block content 
    .container
        .row
            .col-md-6.col-sm-12
                .breadcrumbs.mt-5
                    h1.ps-4.mb-4.breadcrumbs__heading Madala 
                    +breadcrumbs([{link: "/",name: "Home"}, {link: "./product-cart.html",name: "Giỏ hàng"},{link: "./payment.html",name: "Thanh toán"} ])
                section.payment 
                    h3.payment__title Thông tin giao hàng
                    .payment__form
                        form#form-payment.row.g-3.needs-validation(action="") 
                            .col-md-12
                                input#name.payment__form-input(type='text' placeholder="Họ và tên")
                                .valid__feedback.valid__feedback--name Hợp lệ
                            .d-flex
                                .col-md-8.pe-4
                                    input#email.payment__form-input(type='email' placeholder="Email")
                                    .valid__feedback.valid__feedback--email Hợp lệ
                                .col-md-4 
                                    input#phone.payment__form-input(type='tel' placeholder="Số điện thoại")
                                    .valid__feedback.valid__feedback--phone Hợp lệ
                            .col-md-12
                                input#address.payment__form-input(type='text' placeholder="Địa chỉ")
                                .valid__feedback.valid__feedback--address Hợp lệ
                            .payment__form-footer
                                a.col-md-3(href="./product-cart.html") 
                                    i.fas.fa-chevron-left
                                    |Giỏ hàng
                                button#pay(type="submit" ).btn.col-md-6 Thanh toán
