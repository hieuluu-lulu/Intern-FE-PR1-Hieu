            .col-md-6
                section.product
                    .product__content 
                        .wrap
                            .product__content-order 
                                .order__detail
                                    .order__detail-image
                                        img(src="../assets/images/Home16.jpg" alt="") 
                                    .order__detail-desc 
                                        h1.desc__heading Mỹ phẩm châu Âu
                                        span x2
                                .order__price 
                                    span 355.000
